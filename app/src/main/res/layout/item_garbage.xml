<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginVertical="4dp"
    android:background="@android:color/holo_green_light"
    >
    <com.example.fu.ui.common.view.LoadableImageView
        android:id="@+id/item_picture"
        android:layout_width="50dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/description"
        android:src="@drawable/icon"
        />

    <TextView
        android:id="@+id/name"
        style="@style/TextAppearance.SchoolBoy.Header.H1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Apple Gold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_picture"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/description"
        style="@style/TextAppearance.SchoolBoy.Header.H3"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"
        android:text="Хорошое яблочко вкусное зеленое"
        app:layout_constraintTop_toBottomOf="@id/typeOfGarbage"
        app:layout_constraintLeft_toRightOf="@id/item_picture"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/barcode"
        style="@style/TextAppearance.SchoolBoy.Header.H4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="4567189678123"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="8dp"
        android:background="@color/cardview_shadow_start_color"
        />

    <TextView
        android:id="@+id/typeOfGarbage"
        style="@style/TextAppearance.SchoolBoy.Header.H4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Piper, Plastic"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintLeft_toRightOf="@id/item_picture"

        />


</androidx.constraintlayout.widget.ConstraintLayout>
